<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="search" method="upgrade">
    <name>Search - GMapFP</name>
    <author>Fabrice4821</author>
    <creationDate>Mai 2011</creationDate>
    <authorEmail>webmaster@gmapfp.org</authorEmail>
    <authorUrl>http://gmapfp.org/</authorUrl>
    <version>J17V1.1</version>
    <description>Allows Searching of GMapFP Component</description>
    <files>
        <filename plugin="gmapfp">gmapfp.php</filename>
    </files>
    <languages>
        <language tag="fr-FR">languages/fr-FR.plg_search_gmapfp.ini</language>
        <language tag="en-GB">languages/en-GB.plg_search_gmapfp.ini</language>
    </languages>
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="50"
					description="PLG_SEARCH_CONTENT_FIELD_SEARCHLIMIT_DESC"
					label="PLG_SEARCH_CONTENT_FIELD_SEARCHLIMIT_LABEL"
					size="5"
				/>
			</fieldset>

		</fields>
	</config>
</extension>
